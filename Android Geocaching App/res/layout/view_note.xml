<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<TextView android:id="@+id/contact" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Contact:" />
	<TextView android:id="@+id/view_contact" android:layout_width="260dip"
		android:layout_height="wrap_content" android:layout_below="@id/contact"
		android:text="Contact" />
	<TextView android:id="@+id/location" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/view_contact"
		android:text="Location:" />
	<TextView android:id="@+id/view_location"
		android:layout_width="260dip" android:layout_height="wrap_content"
		android:layout_below="@id/location" android:text="Location" />
	<TextView android:id="@+id/message" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/view_location"
		android:text="Message:" />
	<TextView android:id="@+id/view_message" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/message"
		android:text="Enter Todo Message" />
</RelativeLayout>