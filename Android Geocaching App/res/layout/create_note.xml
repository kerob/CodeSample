<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<TextView android:id="@+id/enter_contact"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Enter Contact:" />
	<EditText android:id="@+id/contact" android:layout_width="260dip"
		android:layout_height="wrap_content" android:background="@android:drawable/editbox_background"
		android:layout_below="@id/enter_contact" android:text="Contact" />
	<Button android:id="@+id/get_contact" android:layout_width="50dip"
		android:layout_height="40dip" android:layout_alignParentRight="true"
		android:layout_below="@id/enter_contact" android:text="Get"
		android:onClick="onClick" />
	<TextView android:id="@+id/enter_location"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@id/get_contact" android:text="Enter Location:" />
	<EditText android:id="@+id/location" android:layout_width="260dip"
		android:layout_height="wrap_content" android:background="@android:drawable/editbox_background"
		android:layout_below="@id/enter_location" android:text="Enter Location" />
	<Button android:id="@+id/get_location" android:layout_width="50dip"
		android:layout_height="40dip" android:layout_alignParentRight="true"
		android:text="Get" android:layout_below="@id/enter_location"
		android:onClick="onClick" />
	<ImageView 
  		android:id="@+id/picture"
   		android:layout_width="75dip"
   		android:layout_height="75dip"
   		android:layout_below="@id/location"
   	/>

	<Button android:id="@+id/get_pic" android:layout_width="50dip"
		android:layout_height="40dip" android:layout_alignParentRight="true"
		android:text="Get" android:layout_below="@id/get_location"
		android:onClick="onClick" />
	<TextView android:id="@+id/enter_message"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@id/get_pic" android:text="Enter Message:" />
	<EditText android:id="@+id/message" android:layout_width="fill_parent"
		android:layout_height="200dip" android:background="@android:drawable/editbox_background"
		android:layout_below="@id/enter_message" android:text="Enter Todo Message" />
	<Button android:id="@+id/send" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@id/message"
		android:layout_alignParentLeft="true" android:layout_marginLeft="0dip"
		android:text="Submit" android:onClick="onClick" />
</RelativeLayout>
